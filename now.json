{
  "version": 2,
  "name": "monorepo",
  "scope": "huckleberryai",
  "public": false,
  "builds": [
    {
      "src": "turtletext-client-v1/src/**/*",
      "use": "@now/static"
    },
    { "src": "packages/api/src/**/*.ts", "use": "@now/node" },
    {
      "src": "packages/school-client/package.json",
      "use": "@now/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "packages/text-client/package.json",
      "use": "@now/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/src/$1"
    },
    {
      "src": "/turtletext/client/(.*)",
      "dest": "/turtletext-client-v1/src/$1"
    },
    {
      "src": "/redirect",
      "status": 301,
      "headers": {
        "Location": "https://huckleberry.app/"
      }
    }
  ],
  "env": {
    "TWILIO_ACCOUNT_SID": "@twilio-account-sid",
    "TWILIO_AUTH_TOKEN": "@twilio-auth-token",
    "TWILIO_PHONE_NUMBER": "@twilio-phone-number",
    "GOOGLE_API_KEY": "@google-api-key",
    "LOCAL_LOGIC_API_KEY": "@local-logic-api-key"
  }
}
