{
  "name": "platform",
  "version": "1.0.0",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "start": "DEBUG=* ts-node src/index.ts",
    "debug": "DEBUG=* node --inspect -r ts-node/register src/index.ts",
    "dev": "npx nodemon"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "tslint": {
    "defaultSeverity": "error",
    "extends": [
      "tslint:recommended",
      "tslint-jest",
      "tslint-config-prettier"
    ],
    "jsRules": {},
    "rules": {},
    "rulesDirectory": []
  },
  "quokka": {},
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@types/mongodb": "^3.1.26",
    "@types/node": "^11.13.13",
    "@types/prettyjson": "0.0.29",
    "@types/request": "^2.48.1",
    "@types/request-promise": "^4.1.44",
    "@types/request-promise-native": "^1.0.16",
    "@types/uuid": "^3.4.4",
    "jest": "^24.7.1",
    "nodemon": "^1.18.11",
    "prettier": "^1.17.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-jest": "^1.0.5",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "inversify": "^5.0.1",
    "inversify-express-utils": "^6.3.2",
    "moment": "^2.24.0",
    "mongodb": "^3.2.3",
    "prettyjson": "^1.2.1",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "request-promise-native": "^1.0.7",
    "uuid": "^3.3.2"
  }
}
