{
  "name": "@huckleberry/monorepo",
  "private": true,
  "scripts": {
    "bootstrap": "npx lerna bootstrap",
    "clean": "npx lerna clean",
    "start": "npx lerna run start --stream",
    "tsc": "npx lerna run tsc --stream",
    "watch": "npx lerna run watch --stream",
    "test": "npx lerna run jest",
    "test:watch": "npx lerna run jest --watch"
  },
  "engines": {
    "node": ">=10"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not ie <= 11",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "tslint": {
    "defaultSeverity": "error",
    "extends": [
      "tslint:recommended",
      "tslint-jest",
      "tslint-config-prettier"
    ],
    "jsRules": {},
    "rules": {},
    "rulesDirectory": []
  },
  "quokka": {},
  "devDependencies": {
    "@types/jest": "^24.0.16",
    "@types/node": "^12.6.8",
    "@types/prettyjson": "0.0.29",
    "@types/uuid": "^3.4.4",
    "jest": "^24.7.1",
    "lerna": "^3.16.4",
    "now": "^15.8.7",
    "prettier": "^1.17.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-jest": "^1.0.5"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "inversify": "^5.0.1",
    "moment": "^2.24.0",
    "prettyjson": "^1.2.1",
    "reflect-metadata": "^0.1.13",
    "typescript": "^3.4.5",
    "uuid": "^3.3.2"
  }
}
