{
  "name": "@huckleberry/monorepo",
  "private": true,
  "scripts": {
    "bootstrap": "lerna clean -y && lerna bootstrap",
    "clean": "lerna clean",
    "start": "lerna run start --stream",
    "tsc": "lerna run tsc --stream",
    "tsc:watch": "lerna run tsc:watch --stream",
    "test": "lerna run test  --stream",
    "test:watch": "lerna run test:watch  --stream"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "tslint": {
    "defaultSeverity": "error",
    "extends": [
      "tslint:recommended",
      "tslint-jest",
      "tslint-config-prettier"
    ],
    "jsRules": {},
    "rules": {},
    "rulesDirectory": []
  },
  "quokka": {},
  "devDependencies": {
    "lerna": "^3.16.4",
    "prettier": "^1.17.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-jest": "^1.0.5"
  },
  "dependencies": {}
}
