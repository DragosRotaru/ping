{
  "name": "@huckleberrylabs/ping-api",
  "private": true,
  "version": "3.2.9",
  "description": "Ping API",
  "author": "Dragos Rotaru <dragos@ping.buzz>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/huckleberrylabs/ping.git"
  },
  "bugs": {
    "url": "https://github.com/huckleberrylabs/ping/issues"
  },
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "directories": {
    "lib": "lib"
  },
  "files": [
    "lib",
    "src"
  ],
  "engines": {
    "node": ">=12.8.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "tslint": {
    "defaultSeverity": "error",
    "extends": [
      "tslint:recommended",
      "tslint-jest",
      "tslint-config-prettier"
    ],
    "jsRules": {},
    "rules": {},
    "rulesDirectory": []
  },
  "scripts": {
    "start": "npm run build && node -r dotenv/config lib/index.js",
    "build": "npx tsc",
    "test": "npx jest"
  },
  "dependencies": {
    "@google-cloud/firestore": "^2.2.6",
    "@huckleberrylabs/core": "^3.2.7",
    "@huckleberrylabs/ping": "^3.2.7",
    "@sendgrid/mail": "^6.4.0",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "fp-ts": "^2.1.0",
    "helmet": "^3.23.1",
    "io-ts": "^2.0.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "stripe": "^7.12.0",
    "twilio": "^3.37.0"
  },
  "devDependencies": {
    "@types/color": "^3.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.6",
    "@types/helmet": "0.0.47",
    "@types/jest": "^24.0.22",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/morgan": "^1.9.1",
    "@types/node": "^12.12.6",
    "@types/stripe": "^7.10.8",
    "dotenv": "^8.2.0",
    "jest": "^24.8.0",
    "prettier": "^1.17.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-jest": "^1.0.5",
    "typescript": "^3.7.2"
  },
  "gitHead": "c82709737c51f8029b23824a79de2f34723a8e4b"
}
